<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>main template</title>
    <link rel="stylesheet" href="scripts/editablegrid/editablegrid.css" type="text/css" media="screen">
    <link href="styles/main.css" rel="stylesheet" type="text/css" />
    <!-- only need to load jquery if cross table content in a dropdown is used on editing... -->
    <!-- config.json "values" -->
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="scripts/editablegrid/editablegrid.js"></script>
    <script src="scripts/editablegrid/editablegrid_renderers.js"></script>
    <script src="scripts/editablegrid/editablegrid_editors.js"></script>
    <script src="scripts/editablegrid/editablegrid_validators.js"></script>
    <script src="scripts/editablegrid/editablegrid_utils.js"></script>
    <script src="scripts/editablegrid/editablegrid_charts.js"></script>
    <script src="scripts/csv.js"></script>
    <script src="scripts/xhr.js"></script>
    <script>
		window.onload = function() {
            editableGrid = new EditableGrid("TableDataJSON"); 
            // initial load: no menu item clicked
            loadTableToGrid(editableGrid,'data.php','','datatable');
        } 
	</script>
</head>

<body>
    <div class="content">
        <div class="header">
            <h1><a href="/dbview/">Table filler</a></h1>
        </div>
        <div class="maincontent">
            <div class="leftarea">
                <div class="dbmenu">
                    <h1 class="menutitle">Tables</h1>
                    <ul class="menu">
                        {% for table in tables %}
                        {% if table["values"].in_menu %}
                        {% set table_name = table["name"] %}
                        <li class="menuitem cur_{{ table_name }}"><a 
                            href="#/{{ table_name }}" 
                            onclick="
                            javascript:loadTableToGrid(editableGrid,'data.php','{{ table_name }}', 'datatable');
                            var elems = document.querySelectorAll('.menuitem');
                            [].forEach.call(elems, (el) => { el.classList.remove('active'); });
                            document.querySelector('.cur_{{ table_name }}').classList.add(['active']);" 
                            class="link">{{ table_name }}</a>
                        </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="rightarea">
                <div id="datatable"></div>
            </div>
        </div>
        <div class="footer">
            <p>my footer</p>
        </div>
    </div>
</body>

</html>